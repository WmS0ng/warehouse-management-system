<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.warehouse.mapper.RoleMapper">


    <select id="selectAllRole" resultType="com.example.warehouse.entity.Role">
        select *
        from role
        where role_state = 1
    </select>
    <select id="selectRoleListByUid" resultType="com.example.warehouse.entity.Role">
        select t2.*
        from user_role t1,
             role t2
        where #{userId} = t1.user_id
          and t1.role_id = t2.role_id
    </select>
</mapper>
