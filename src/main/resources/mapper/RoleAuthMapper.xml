<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.warehouse.mapper.RoleAuthMapper">
    <!-- 根据角色id删除角色关系 -->
    <delete id="deleteRoleAuthByRid">
        delete
        from role_auth
        where role_id = #{roleId}
    </delete>

    <!-- 根据roleId查询权限id -->
    <select id="selectAuthIdListByRid" resultType="java.lang.Integer">
        select auth_id
        from role_auth
        where role_id = #{roleId}
    </select>
</mapper>
